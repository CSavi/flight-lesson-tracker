<h1>Lesson Index</h1>

<% @lessons.each do |lesson| %>
  
  <ul>
    <li>Lesson Student: <%= lesson.student.name %></li>
    <li>Lesson Instructor: <%= lesson.instructor.name %></li>
    <li>Lesson Description: <%= lesson.description %></li>
    <% if logged_in? %>  
     <li><p><%=link_to 'Edit Lesson?', edit_lesson_path(lesson) %></p></li>
    <% end %>
  </ul>

<% end %>